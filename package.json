{
  "publisher": "sankeyangshu",
  "name": "vscode-javascript-typescript-snippets",
  "displayName": "JavaScript and TypeScript Vscode Snippets",
  "version": "0.2.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "description": "Code snippets for js, ts, vue, react, nestjs, etc.",
  "author": {
    "name": "sankeyangshu",
    "email": "sankeyangshu@gmail.com",
    "url": "https://github.com/sankeyangshu"
  },
  "license": "MIT",
  "homepage": "https://github.com/sankeyangshu/vscode-javascript-snippets#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/sankeyangshu/vscode-javascript-snippets"
  },
  "bugs": {
    "url": "https://github.com/sankeyangshu/vscode-javascript-snippets/issues"
  },
  "keywords": [
    "snippets",
    "vue",
    "react",
    "javascript",
    "typescript",
    "nestjs",
    "uniapp",
    "code-snippets"
  ],
  "categories": [
    "Snippets"
  ],
  "main": "./dist/index.cjs",
  "icon": "res/icon.png",
  "files": [
    "dist/**/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Multi-Framework Snippets",
      "properties": {
        "framework.enabled": {
          "type": "array",
          "default": [
            "vue",
            "react",
            "nest",
            "vitest"
          ],
          "items": {
            "type": "string",
            "enum": [
              "vue",
              "react",
              "nest",
              "vitest"
            ]
          },
          "description": "Select which framework snippets to enable",
          "enumDescriptions": [
            "Vue.js framework snippets",
            "React framework snippets",
            "NestJS framework snippets",
            "Vitest test framework snippets"
          ]
        },
        "react.languageScopes": {
          "type": "string",
          "markdownDescription": "Defines the language scopes for which the snippets will be available.\nUse comma separated values.\nFor example: `typescript,typescriptreact,javascript,javascriptreact`",
          "default": "typescript,typescriptreact,javascript,javascriptreact"
        },
        "react.importReactOnTop": {
          "type": "boolean",
          "markdownDescription": "Controls if snippets should add `import React from 'react';` at the top of components.\nUse if you have React +17 and use jsx transform.",
          "default": false
        },
        "vue.languageScopes": {
          "type": "string",
          "markdownDescription": "Defines the language scopes for which the snippets will be available.\nUse comma separated values.\nFor example: `vue,typescript,javascript`",
          "default": "vue,typescript,javascript"
        },
        "vue.uniappCodeSnippets": {
          "type": "boolean",
          "markdownDescription": "Whether to support uniapp code snippets",
          "default": true
        },
        "vue.vuexCodeSnippets": {
          "type": "boolean",
          "markdownDescription": "Whether to support vuex code snippets",
          "default": false
        },
        "vue.useTemplateSnippets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Defines the template snippets for which the snippets will be available",
          "default": [
            "vinit",
            "vinit-scss",
            "vbase",
            "vbase-scss",
            "vts",
            "vts-scss"
          ]
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode && pnpm generate",
    "generate": "tsx scripts/generate.ts",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "vscode:prepublish": "pnpm run build",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsxpub --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^25.0.7",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.7.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.19.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vscode-ext-gen": "^1.5.1",
    "vsxpub": "^0.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm typecheck && pnpm lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
